import java.io.File;
import java.io.IOException;

public class LanzarTablaDeMultiplicar {

    public static void main(String[] args) {
        try {
            // Archivos para entrada, salida y errores
            File archivoEntrada = new File("entrada.txt");
            File archivoSalida = new File("salida.txt");
            File archivoErrores = new File("errores.txt");

            // Crear el proceso
            ProcessBuilder pb = new ProcessBuilder("java", "TablaMultiplicar");

            // Redirigir entrada, salida y errores
            pb.redirectInput(archivoEntrada);
            pb.redirectOutput(archivoSalida);
            pb.redirectError(archivoErrores);

            // Iniciar el proceso
            Process proceso = pb.start();

            // Esperar a que termine
            int exitCode = proceso.waitFor();
            System.out.println("Proceso finalizado con c√≥digo: " + exitCode);

        } catch (IOException | InterruptedException e) {
            e.printStackTrace();
        }
    }
}
