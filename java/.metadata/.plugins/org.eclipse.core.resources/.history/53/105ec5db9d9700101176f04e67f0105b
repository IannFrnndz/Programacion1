package repaso;

public class Bicicleta extends VehiculoTerrestre{

	boolean tieneTimbre;
	
	public Bicicleta(int ruedas, boolean tieneTimbre) {
		super(ruedas);
		this.tieneTimbre = tieneTimbre;
	}

	@Override
	public void acelerar() {
		velocidad = velocidad+5;
		
	}

	@Override
	public void frenar() {
		velocidad = velocidad-2;
		
	}
	
	public void setTieneCasco(boolean estado) {
	       this.tieneCasco = estado;
	       if (estado) {
	           System.out.println("Tiene el casco puesto");
	       } else {
	           System.out.println("No tiene el casco puesto");
	       }
	   }

}
